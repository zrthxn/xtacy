{{!------ ==== PAGE ==== ------}}

{{> header }}

{{!-- START PAGE CONTENT --}}
<section>
    <div class="container fit">
        <h2>Contact</h2>

        <form action="/_contact/send" method="POST" class="container center">
            <input type="text" hidden="true" readonly="true" name="srKey" id="srKey" value="null">
            <input type="text" hidden="true" readonly="true" name="srToken" id="srToken" value="null">

            <input type="text" class="textbox" required="true" name="formName" id="formName" placeholder="Name">
            <input type="text" class="textbox" required="true" name="formEmail" id="formEmail" placeholder="Email or Phone">
            <input type="text" class="textbox" required="true" name="formMsg" id="formMsg" placeholder="Message">

            <button class="button solid" id="send">Send</button>
        </form>

        <p>Upon Contact
            <ul>
                <li>Send email to us about it</li>
                <li>Send email to them about it</li>
                <li>Add them to mailing list</li>
                <li>Maybe send promotional stuff</li>
            </ul>
        </p>
    </div>
</section>
{{!-- END PAGE CONTENT --}}

<script>
    window.onload = () => {
        let key = localStorage.getItem( config.csrfTokenNameKey )
        let token = localStorage.getItem( config.csrfTokenName+key )

        document.getElementById("srKey").value = key;
        document.getElementById("srToken").value = token;        
    }
    
</script>

{{> footer }}